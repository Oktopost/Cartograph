<phpunit bootstrap="tests/boot.php">
	<filter>
		<whitelist processUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">src/</directory>
		</whitelist>
	</filter>
	<testsuites>
		<testsuite name="Cartograph">
			<directory>tests/Cartograph</directory>
		</testsuite>
	</testsuites>
	<logging>
		<log type="coverage-clover" target="tests/src/build/logs/clover.xml"/>
	</logging>
</phpunit>